{
  "compilerOptions": {
    "jsx": "react-jsx",
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", ".vite", ".next", "coverage", ".git", "public"]
}
